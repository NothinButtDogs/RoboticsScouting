<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:weightSum="100"
    android:layout_width="fill_parent"  android:background="@color/white" 
    android:layout_height="fill_parent" >
<LinearLayout android:layout_weight="50"
    android:orientation="horizontal" android:layout_gravity="fill_horizontal"
    android:layout_width="fill_parent" android:background="@color/blue"
    android:layout_height="fill_parent" >
     
    </LinearLayout>
<ScrollView android:id="@+id/ScrollView01" 
    android:layout_width="fill_parent" android:layout_weight="10"
    android:layout_height="fill_parent" >
<LinearLayout android:layout_height="fill_parent" 
    android:background="@color/white" android:gravity="center_horizontal"
     android:layout_width="fill_parent" android:orientation="vertical" > 
    
<LinearLayout 
    android:orientation="horizontal" android:background="@drawable/sectionborder"
    android:layout_width="fill_parent" android:weightSum="90"
    android:layout_height="fill_parent" android:padding="5dp">
   <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" 
     android:text="Move Forward" android:textColor="@color/black" android:textSize="20dp"
     android:background="@android:color/transparent"  android:layout_gravity="top" >
   </TextView>
   <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" 
     android:text="0" android:textColor="@color/black" android:textSize="30dp"
     android:background="@android:color/transparent"  android:layout_gravity="top" >
   </TextView>
   <LinearLayout  android:layout_width="185dp" android:layout_gravity="center" 
    android:layout_height="wrap_content" android:orientation="vertical" android:padding="15dp"
    android:layout_weight="5">
   <ImageButton   android:layout_height="wrap_content" android:layout_width="wrap_content" 
  android:src="@drawable/add" android:id="@+id/btnAddMade" android:layout_weight="50"
  android:background="@android:color/transparent"  android:layout_gravity="center" >
   </ImageButton>
   <ImageButton   android:layout_height="wrap_content" android:layout_width="wrap_content" 
  android:src="@drawable/minus" android:id="@+id/btnMinusMade" android:layout_weight="50"
  android:background="@android:color/transparent"  android:layout_gravity="center" >
   </ImageButton>   
   </LinearLayout>
   <TextView  android:layout_height="wrap_content" android:layout_width="wrap_content" 
     android:text="0" android:textColor="@color/black" android:textSize="20dp"
     android:background="@android:color/transparent"  android:layout_gravity="top" >
   </TextView>
   <LinearLayout  android:layout_width="185dp" android:layout_gravity="center" 
    android:layout_height="wrap_content" android:orientation="vertical" android:padding="15dp"
    android:layout_weight="5">
   <ImageButton   android:layout_height="wrap_content" android:layout_width="wrap_content" 
  android:src="@drawable/add" android:id="@+id/btnAddMiss" android:layout_weight="50"
  android:background="@android:color/transparent"  android:layout_gravity="center" >
   </ImageButton>
   <ImageButton   android:layout_height="wrap_content" android:layout_width="wrap_content" 
  android:src="@drawable/minus" android:id="@+id/btnMinusMiss" android:layout_weight="50"
  android:background="@android:color/transparent"  android:layout_gravity="center" >
   </ImageButton>   
   </LinearLayout>

</LinearLayout>
</ScrollView>
   <LinearLayout android:layout_weight="10"
	      android:layout_width="fill_parent"  android:gravity="bottom"
	      android:layout_height="fill_parent" android:background="@color/white" 
	       android:layout_gravity="bottom" >
       <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:background="@color/black" android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center">
           <ImageButton android:id="@+id/btnHome" android:layout_width="wrap_content" android:src="@drawable/doghouse" android:layout_height="wrap_content" android:background="@android:color/transparent"></ImageButton>
           <TextView android:layout_width="wrap_content"  android:gravity="center" android:background="@android:color/transparent" android:textColor="@color/black" android:layout_height="wrap_content" android:textSize="14dp" android:textStyle="bold" android:text="Home"></TextView>
       </LinearLayout>
    </LinearLayout>
 </LinearLayout>
    